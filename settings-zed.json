{
	"ui_font_family": "Inter",
	"ui_font_size": 16,
	"buffer_font_size": 14,
	"buffer_font_weight": 500,
	"buffer_font_family": "Liga SFMono Nerd Font",
	"format_on_save": "on",
	"remove_trailing_whitespace_on_save": true,
	"theme": {
		"mode": "dark",
		"light": "Catppuccin Latte - No Italics",
		"dark": "Catppuccin Macchiato - No Italics"
	},
	"tab_bar": {
		"show": true,
		"show_nav_history_buttons": false
	},
	"tabs": {
		"file_icons": true,
		"git_status": true
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true
	},
	"project_panel": {
		"button": true,
		"dock": "left",
		"git_status": true,
		"scrollbar": {
			"show": "never"
		}
	},
	"terminal": {
		"font_family": "Liga SFMono Nerd Font",
		"font_size": 13,
		"font_weight": 700,
		"line_height": "standard",
		"option_as_meta": true
	},
	"buffer_line_height": "comfortable",
	"indent_guides": {
		"enabled": true,
		"coloring": "indent_aware",
		"line_width": 2,
		"highlight_active_indent": true
	},
	"formatter": "auto",
	"file_types": {
		"Dockerfile": ["Dockerfile*"],
		"env": [".env*"]
	},
	"languages": {
		"GraphQL": {
			"code_actions_on_format": {
				"source.organizeImports": true
			}
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.organizeImports": true
			}
		},
		"JavaScript": {
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
		"JSX": {
			"code_actions_on_format": {
				"source.organizeImports": true
			}
		},
		"TSX": {
			"code_actions_on_format": {
				"source.organizeImports": true
			}
		}
	}
}
